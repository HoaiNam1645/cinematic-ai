# Environment Configuration
# Copy to .env and customize

# Application
ENVIRONMENT=development
DEBUG=true
APP_VERSION=1.0.0

# API
JWT_SECRET_KEY=change-this-to-a-secure-random-string
CORS_ORIGINS=["http://localhost:3000"]

# Database
DB_POSTGRES_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/cinematic_ai
DB_MONGODB_URL=mongodb://localhost:27017
DB_MONGODB_DATABASE=cinematic_ai
DB_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Storage (S3/MinIO)
STORAGE_ENDPOINT_URL=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET_NAME=cinematic-ai
STORAGE_REGION=us-east-1

# AI Models
AI_DEVICE=cuda
AI_DTYPE=float16
AI_ENABLE_XFORMERS=true
AI_MODEL_CACHE_DIR=/models/cache
AI_IMAGE_MODEL=stabilityai/stable-diffusion-xl-base-1.0
AI_VIDEO_MODEL=stabilityai/stable-video-diffusion-img2vid-xt

# Video Settings
VIDEO_DEFAULT_FPS=24
VIDEO_DEFAULT_RESOLUTION=1080p
VIDEO_MAX_DURATION_SECONDS=120

# Safety
SAFETY_ENABLED=true
SAFETY_NSFW_THRESHOLD=0.85
SAFETY_TOXICITY_THRESHOLD=0.7

# External APIs (optional)
OPENAI_API_KEY=
REPLICATE_API_KEY=

# Monitoring (optional)
SENTRY_DSN=
